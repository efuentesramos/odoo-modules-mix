<odoo>
    <data>
        <record id="apu_manager_manpower_view_form" model="ir.ui.view">
            <field name="name">manpower.view.form</field>
            <field name="model">apu.manager.manpower</field>
            <field name="arch" type="xml">
                <form string="Mano de Obra">
                  
                        <group>
                            <field name="name"/>
                            <field name="unit_measurement"/>
                            <field name="unit_cost" />                     
                        </group>
                        
                   
                </form>
            </field>
        </record>

        <record id="apu_manager_manpower_view_tree" model="ir.ui.view">
            <field name="name">manpower.view.tree</field>
            <field name="model">apu.manager.manpower</field>
            <field name="arch" type="xml">
                <tree string="Mano de Obra">
                  
                    <field name="name"/>
                    <field name="unit_measurement"/>
                    <field name="unit_cost" />                     

                </tree>
            </field>
        </record>

        
        <record id="apu_manager_manpower_action" model="ir.actions.act_window">
            <field name="name">manpower</field>
            <field name="res_model">apu.manager.manpower</field>
            <field name="view_mode">tree,form</field>
        </record>


    
    
    <menuitem id="menu_manpower" name="manpower" parent="menu_root" />

    <menuitem id="menu__manpower__act" 
            name="manpower" 
            parent="menu_manpower" 
            action="apu_manager_manpower_action" 
            sequence="30"/>

    </data>

</odoo>